                    {% else %}
                        {{article.content}}
                    {% endif %}
                    </td>
                    <td>{{ article.createdAt |date('d-m-Y')}}</td>
                    <td>{{ article.likes }}</td>
                </tr>
            {% endfor %}
            </tbody>
    </table>
{% endblock %}
